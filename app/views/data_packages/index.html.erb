
<h2> Here are all the data packages: </h2>

<% @data_packages.each do |data_package| %>
    <li> Name: <a href = "data_packages/<%= data_package.id%>"><%= data_package.name%></a> <br>
         Category: <%= data_package.category%>  
         | Created by: <%= data_package.user.username%>
    </li>
    <br>
<% end %>

<h3> Search: </h3>

<%= form_tag("/data_packages", method: "get") do %>
    <%= label_tag(:q, "Search for name of data package:") %>
    <%= text_field_tag(:name) %>
    <%= submit_tag("Search") %>
  <% end %>


