<h2><i> Data packages </i></h2><br>

<h2> <%= link_to "Add a new data package", new_data_package_path %></h2>
<br>

<h3> Research wall: </h3><br>

<% @data_packages.each do |data_package| %>
    <li> Name: <a href = "data_packages/<%= data_package.id%>"><%= data_package.name%></a> </li>
        <ul> Category: <a href = "categories/<%= data_package.category.id%>"><%= data_package.category.name %></a>  
            | Created by: <%= data_package.user.username%>   <br>
            <%= link_to "See all documents", data_package_documents_path(data_package)%> </button><br>
            <%= link_to "Add a document", new_data_package_document_path(data_package)%>
        </ul>
    <br>
<% end %>

