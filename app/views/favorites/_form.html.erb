

<%= form_for @favorite  do |f|%>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.hidden_field :data_package_id, value: data_package.id %>
    
    <%= f.label :notes, "Notes: " %>
    <%= f.text_field :notes %>
    
    <%= f.label :data_package_id, "Data Package it belongs to?:" %>
    <%= f.collection_select :data_package_id, DataPackage.all, :id, :name %>

    <%= f.submit 'Add favorite' %>
    <% end %>